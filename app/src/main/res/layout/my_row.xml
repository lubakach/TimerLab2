<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/startLayout">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="12dp">

            <TextView
                android:id="@+id/timer_id_text"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:text="1"
                android:textColor="#000"
                android:textSize="40sp"
                android:textStyle="bold"
                android:visibility="invisible"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.794" />

            <TextView
                android:id="@+id/timer_name_txt"
                android:layout_width="223dp"
                android:layout_height="63dp"
                android:layout_marginTop="12dp"
                android:text="Timer Name"
                android:textColor="#000"
                android:textSize="40sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.142"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/timer_pre_txt"
                android:layout_width="35dp"
                android:layout_height="25dp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="17dp"
                android:text="P"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/timer_name_txt" />

            <TextView
                android:id="@+id/timer_work_text"
                android:layout_width="35dp"
                android:layout_height="25dp"
                android:layout_marginTop="17dp"
                android:text="W"
                app:layout_constraintStart_toEndOf="@+id/timer_pre_txt"
                app:layout_constraintTop_toBottomOf="@+id/timer_name_txt" />

            <TextView
                android:id="@+id/timer_rest_txt"
                android:layout_width="35dp"
                android:layout_height="25dp"
                android:layout_marginTop="17dp"
                android:text="R"
                app:layout_constraintStart_toEndOf="@+id/timer_work_text"
                app:layout_constraintTop_toBottomOf="@+id/timer_name_txt" />

            <TextView
                android:id="@+id/timer_cycle_txt"
                android:layout_width="35dp"
                android:layout_height="25dp"
                android:layout_marginTop="17dp"
                android:text="Cy"
                app:layout_constraintStart_toEndOf="@+id/timer_rest_txt"
                app:layout_constraintTop_toBottomOf="@+id/timer_name_txt" />

            <TextView
                android:id="@+id/timer_calm_txt"
                android:layout_width="35dp"
                android:layout_height="25dp"
                android:layout_marginTop="17dp"
                android:text="C"
                app:layout_constraintStart_toEndOf="@+id/timer_cycle_txt"
                app:layout_constraintTop_toBottomOf="@+id/timer_name_txt" />

            <Button
                android:id="@+id/button_start"
                android:layout_width="99dp"
                android:layout_height="39dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="12dp"
                android:text="@string/start"
                app:layout_constraintStart_toEndOf="@+id/timer_name_txt"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="MissingConstraints" />

            <Button
                android:id="@+id/update_pass"
                android:layout_width="99dp"
                android:layout_height="39dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:text="@string/Update"
                app:layout_constraintStart_toEndOf="@+id/timer_name_txt"
                app:layout_constraintTop_toBottomOf="@+id/button_start"
                tools:ignore="DuplicateIds" />

            <TextView
                android:id="@+id/timer_color_txt"
                android:layout_width="15dp"
                android:layout_height="2dp"
                android:text="TextView"
                android:visibility="invisible"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.719"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.024" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>